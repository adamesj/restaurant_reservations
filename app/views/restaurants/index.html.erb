<script src="//maps.google.com/maps/api/js?key=AIzaSyDWfmWHrWt3KbjWms2WS65r2c8xaEeigBA"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

<div class="container">
  <h1>Restaurant Index</h1>

  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div><br>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <ul id="categories">
          <% Category.all.each do |category| %>
            <li>
              <%= link_to category.name, category_path(category) %>
            </li>
          <% end %>
        </ul>
        <tr>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Name</th>
          <th>Address</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @restaurants) do |restaurant| %>
          <td><%= restaurant.latitude %></td>
          <td><%= restaurant.longitude %></td>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= link_to 'Show', restaurant_path(restaurant) %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
          <td><%= link_to 'Destroy', restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>