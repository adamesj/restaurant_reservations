<div class="container">
  <h2>Welcome back <%= @user.email %>!</h2>
  <hr>
  <br>
  <div class="row">
    <div class="col-md-3">
      <strong>Menu</strong>
      <hr>
      <ul class="nav nav-pills nav-stacked">
        <li class="nav-header"></li>
        <li class="active"><%= link_to 'Add a new restaurant', new_restaurant_path, class: 'btn btn-info' %></li>
        <li><a href="/tagged/bootstrap-3">My Restaurants</a></li>
        <li class="divider"></li>
        <li><a href="/61518" title="Bootstrap 3 Panel">View Reservations</a></li>
      </ul>
    </div>

    <div class="col-md-9">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">My Restaurants</div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Restaurant Name</th>
                  <th>Times Favorited</th>
                </tr>
              </thead>
              <tbody>
                <%= content_tag_for(:tr, @restaurants) do |restaurant| %>
                  <td><%= restaurant.name %></td>
                  <td><%= restaurant.favorites_count %></td>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">
            <i class="glyphicon glyphicon-pushpin pull-right"></i>
              Pending Reservations
          </div>
        </div>

        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Restaurant Name</th>
                  <th>Reservation</th>
                </tr>
              </thead>
              <tbody>
                <%= content_tag_for(:tr, @restaurants) do |restaurant| %>
                  <td><%= restaurant.name %></td>
                  <td><%= render restaurant.reservations %></td>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div><!--/panel-->
    </div><!--/col-span-9-->
  </div>
</div>